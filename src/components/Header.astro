---
const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
const isHome = currentPath === '/' || currentPath === base || currentPath === base + '/';

// ロゴ画像のパス（baseを考慮）
const logoWhite = `${base}images/geolonia_logo_white.png`;
const logoColor = `${base}images/geolonia_logo.png`;

// 内部リンク用ヘルパー関数
const internalLink = (path: string): string => {
  // 外部リンク（http(s)://で始まる）はそのまま返す
  if (path.startsWith('http://') || path.startsWith('https://')) {
    return path;
  }
  // 本番環境（base === '/'）の場合はそのまま返す
  if (base === '/') {
    return path;
  }
  // ステージング環境の場合、スラッシュの重複を避けてbaseを追加
  // base: '/www.geolonia.com/', path: '/products/' -> '/www.geolonia.com/products/'
  const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${cleanBase}${path}`;
};
