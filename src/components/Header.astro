  .site-header--page .global-nav-list > li.menu-item-contact > a {
    border: 2px solid var(--vk-color-primary);
    color: var(--vk-color-primary);
  }

  .site-header--page .global-nav-list > li.menu-item-contact > a:hover {
    background-color: var(--vk-color-primary);
    color: #fff;
  }

  .global-nav-list > li.menu-item-contact::before {
    display: none;
  }

  /* Submenu Arrow */
  .global-nav-list > li.menu-item-has-children::after {
    transition: all 0.2s ease-out;
    content: "";
    position: absolute;
    padding: 0;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    border: 10px solid transparent;
    z-index: 9999;
    opacity: 0;
    border-bottom-color: var(--vk-color-primary);
  }

  .global-nav-list > li.menu-item-has-children:hover::after {
    opacity: 1;
    bottom: 1px;
  }

  /* Submenu */
  .global-nav-list > li > ul.sub-menu {
    background-color: var(--vk-color-primary);
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    left: 50%;
    margin-left: -120px;
    width: 240px;
    margin-top: -1px;
    border-radius: var(--vk-size-radius);
  }

  .global-nav-list .sub-menu {
    margin: 0;
    padding: 0;
    text-align: left;
    transition: opacity 0.3s ease-in, visibility 0.3s ease-in;
    position: absolute;
    z-index: 10000;
    display: block;
    overflow: visible;
    opacity: 0;
    visibility: hidden;
    list-style: none;
  }

  .global-nav-list > li:hover > .sub-menu {
    opacity: 1;
    visibility: visible;
    overflow-y: auto;
    max-height: 90vh;
  }

  .global-nav-list .sub-menu li a {
    color: #fff;
    padding: 14px 1.2em;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    display: block;
  }

  .global-nav-list .sub-menu li:not(.menu-item-has-children):last-child > a {
    border-bottom: none;
  }

  .global-nav-list .sub-menu li a:hover {
    background-color: var(--vk-color-primary-vivid);
    color: #fff;
  }

  .global-nav-list .sub-menu li.menu-item-has-children > a {
    padding: 14px 3.5em 14px 1.2em;
  }

  .global-nav-list .sub-menu .sub-menu {
    top: 0;
    left: 100%;
    margin-left: 0;
  }

  /* Mobile Menu Button */
  .vk-mobile-nav-menu-btn {
    position: fixed;
    top: 15px;
    right: 15px;
    z-index: 10001;
    border: none;
    border-radius: 4px;
