    flex-wrap: nowrap;
    list-style: none;
    margin-top: 8px;
    margin-bottom: 6px;
    padding: 0;
  }

  .header-top ul.menu li {
    list-style: none;
    margin: 0;
    line-height: 1.4em;
  }

  .header-top ul.menu li a,
  .header-top ul.menu li span {
    color: #fff;
    text-decoration: none;
    padding: 0 0.5rem;
    font-size: 12px;
    white-space: nowrap;
    display: block;
  }

  .header-top ul.menu li a:hover {
    text-decoration: underline;
    background: none;
  }

  .header-contact-btn {
    background: #fff;
    color: #333;
    padding: 8px 20px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 12px;
    font-weight: 700;
    white-space: nowrap;
    display: inline-block;
    margin-left: 1rem;
    transition: background 0.3s ease;
  }

  .header-contact-btn:hover {
    background: #f5f5f5;
    text-decoration: none;
  }

  /* Header Container */
  .site-header-container {
    display: block;
    overflow: visible;
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Logo */
  .site-header-logo {
    text-align: center;
    font-weight: 700;
    font-size: 1.5rem;
    white-space: nowrap;
    margin: 0;
  }

  .site-header-logo a {
    color: #fff;
    text-decoration: none;
  }

  .site-header-logo img {
    max-height: 60px;
    max-width: 100%;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  /* Global Navigation */
  .global-nav-list {
    margin: 0 auto;
    padding: 0;
    display: flex;
    list-style: none;
    position: relative;
    flex-wrap: nowrap;
  }

  /* Navigation link colors */
  .site-header--home .global-nav-list a {
    color: #fff;
  }

  .site-header--page .global-nav-list > li > a {
    color: #444;
  }

