      </ul>
    </nav>

    <button class="vk-mobile-nav-menu-btn" id="mobile-menu-btn" aria-label="MENU">MENU</button>
  </div>
</header>

<style>
  :root {
    --vk-color-primary: #f39813;
    --vk-color-primary-dark: #c2790f;
    --vk-color-primary-vivid: #ffa714;
    --vk-color-text-header: #444;
    --vk-color-text-body: #333;
    --vk-color-text-light: #666;
    --vk-color-border-hr: rgba(0, 0, 0, 0.06);
    --vk-size-radius: 5px;
  }

  .site-header {
    width: 100%;
    overflow: visible;
    z-index: 9999;
    position: absolute;
    background-color: transparent;
    box-shadow: none;
    border-bottom: none;
  }

  .site-header::after {
    content: "";
    clear: both;
    display: block;
  }

  /* Header Top */
  .header-top {
    font-size: 12px;
    color: #fff;
    background-color: rgba(235, 87, 34, 0.5);
    margin-top: -7px;
    border-bottom: none;
  }

  .header-top .container {
    display: flex;
    overflow: visible;
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .header-top-description {
    position: relative;
    top: 7px;
    display: block;
    margin: 0;
    padding: 9px 20px 14px 0;
    width: 100%;
    line-height: 1.4em;
    color: #fff;
    font-size: 12px;
  }

  .menu-header-top-navigation-container {
    position: relative;
    top: 9px;
  }

  .header-top ul.menu {
    display: flex;
    flex-wrap: nowrap;
    list-style: none;
    margin-top: 8px;
    margin-bottom: 6px;
    padding: 0;
  }

  .header-top ul.menu li {
    list-style: none;
    margin: 0;
    line-height: 1.4em;
  }

  .header-top ul.menu li a,
  .header-top ul.menu li span {
    color: #fff;
    text-decoration: none;
    padding: 0 0.5rem;
    font-size: 12px;
    white-space: nowrap;
    display: block;
  }

  .header-top ul.menu li a:hover {
    text-decoration: underline;
    background: none;
  }

  .header-contact-btn {
    background: #fff;
    color: #333;
    padding: 8px 20px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 12px;
    font-weight: 700;
    white-space: nowrap;
    display: inline-block;
    margin-left: 1rem;
    transition: background 0.3s ease;
  }

  .header-contact-btn:hover {
    background: #f5f5f5;
    text-decoration: none;
  }

  /* Header Container */
  .site-header-container {
    display: block;
    overflow: visible;
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Logo */
  .site-header-logo {
    text-align: center;
    font-weight: 700;
    font-size: 1.5rem;
    white-space: nowrap;
    margin: 0;
  }

  .site-header-logo a {
    color: #fff;
    text-decoration: none;
  }

  .site-header-logo img {
    max-height: 60px;
    max-width: 100%;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  /* Global Navigation */
  .global-nav-list {
    margin: 0 auto;
    padding: 0;
    display: flex;
    list-style: none;
    position: relative;
    flex-wrap: nowrap;
  }

  .global-nav-list a {
    color: #fff;
  }

  .global-nav-list li {
    margin: 0;
    list-style: none;
    line-height: 1.4;
    font-size: 12px;
    position: relative;
  }

  .global-nav-list > li {
    text-align: center;
    float: left;
  }

  .global-nav-list > li > a {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .global-nav-list > li .global-nav-name {
    font-size: 14px;
    display: block;
    width: 100%;
    white-space: nowrap;
  }

  .global-nav-list > li .global-nav-description {
    display: block;
    overflow: hidden;
    font-size: 10px;
    line-height: 14px;
    opacity: 0.6;
    text-align: center;
    white-space: nowrap;
    text-transform: uppercase;
  }

  .global-nav-list > li:hover .global-nav-description,
  .global-nav-list > li.current-menu-item .global-nav-description {
    opacity: 1;
  }

  .global-nav-list > li::before {
    position: absolute;
    left: 0;
    bottom: 0;
    content: "";
    width: 0;
    border-bottom: 1px solid var(--vk-color-primary);
    transition: all 0.5s ease-out;
  }

  .global-nav-list > li:hover::before,
  .global-nav-list > li.current-menu-item::before {
    width: 100%;
  }

  /* Contact Button Styling */
  .global-nav-list > li.menu-item-contact > a {
    border: 2px solid #fff;
    border-radius: 4px;
    padding: 10px 20px !important;
    margin-left: 10px;
    transition: all 0.3s ease;
  }

  .global-nav-list > li.menu-item-contact > a:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .global-nav-list > li.menu-item-contact::before {
    display: none;
  }

  /* Submenu Arrow */
  .global-nav-list > li.menu-item-has-children::after {
    transition: all 0.2s ease-out;
    content: "";
    position: absolute;
    padding: 0;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    border: 10px solid transparent;
    z-index: 9999;
    opacity: 0;
    border-bottom-color: var(--vk-color-primary);
  }

  .global-nav-list > li.menu-item-has-children:hover::after {
    opacity: 1;
    bottom: 1px;
  }

  /* Submenu */
  .global-nav-list > li > ul.sub-menu {
    background-color: var(--vk-color-primary);
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    left: 50%;
    margin-left: -120px;
    width: 240px;
    margin-top: -1px;
    border-radius: var(--vk-size-radius);
  }

  .global-nav-list .sub-menu {
    margin: 0;
    padding: 0;
    text-align: left;
    transition: opacity 0.3s ease-in, visibility 0.3s ease-in;
    position: absolute;
    z-index: 10000;
    display: block;
    overflow: visible;
    opacity: 0;
    visibility: hidden;
    list-style: none;
  }

  .global-nav-list > li:hover > .sub-menu {
    opacity: 1;
    visibility: visible;
    overflow-y: auto;
    max-height: 90vh;
  }

  .global-nav-list .sub-menu li a {
    color: #fff;
    padding: 14px 1.2em;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    display: block;
  }

  .global-nav-list .sub-menu li:not(.menu-item-has-children):last-child > a {
    border-bottom: none;
  }

  .global-nav-list .sub-menu li a:hover {
    background-color: var(--vk-color-primary-vivid);
    color: #fff;
  }

  .global-nav-list .sub-menu li.menu-item-has-children > a {
    padding: 14px 3.5em 14px 1.2em;
  }

  .global-nav-list .sub-menu .sub-menu {
    top: 0;
    left: 100%;
    margin-left: 0;
  }

  /* Mobile Menu Button */
  .vk-mobile-nav-menu-btn {
    position: fixed;
    top: 5px;
    right: 5px;
    z-index: 2100;
    overflow: hidden;
    border: 1px solid #333;
    border-radius: 2px;
    width: 34px;
    height: 34px;
    cursor: pointer;
    font-size: 0;
    background: rgba(255, 255, 255, 0.8);
    display: none;
  }

  /* Desktop Layout */
  @media (min-width: 992px) {
    .site-header-container {
      display: flex;
      flex-direction: row;
    }

    .site-header--layout--nav-float .site-header-logo {
      margin-right: 2em;
      flex-shrink: 0;
      text-align: left;
      padding-top: 1.1rem;
      margin-bottom: 1rem;
    }

    .site-header--layout--nav-float .site-header-logo img {
      margin-left: 0;
    }

    .global-nav--layout--float-right {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      width: auto;
      margin-left: auto;
    }

    .global-nav--layout--float-right .global-nav-list {
      margin: unset;
    }

    .global-nav-list > li > a {
      padding: 14px 1.5em;
      overflow: hidden;
      text-align: center;
      position: relative;
      height: 100%;
    }

    .vk-mobile-nav-menu-btn {
      display: none !important;
    }
  }

  /* Tablet and Mobile */
  @media (max-width: 991px) {
    .header-top {
      display: none;
    }

    .global-nav {
      display: none;
    }

    .vk-mobile-nav-menu-btn {
      display: block;
    }

    .site-header-logo {
      padding-top: 0.5rem;
      margin-bottom: 0.5rem;
      white-space: normal;
    }

    .site-header-logo img {
      max-height: 50px;
    }
  }

  @media (max-width: 575px) {
    .site-header-logo img {
      max-height: 35px;
    }
  }
</style>

<script>
  // Mobile menu toggle (placeholder for future implementation)
  document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
    console.log('Mobile menu clicked');
  });
</script>
