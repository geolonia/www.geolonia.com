    display: none;
  }

  .header-top .container {
    display: flex;
    overflow: visible;
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .header-top-description {
    position: relative;
    top: 7px;
    display: block;
    margin: 0;
    padding: 9px 20px 14px 0;
    width: 100%;
    line-height: 1.4em;
    color: #fff;
    font-size: 12px;
  }

  .menu-header-top-navigation-container {
    position: relative;
    top: 9px;
