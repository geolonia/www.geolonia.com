---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('pages', 'company/recruit');
const { Content } = await entry.render();
---

<BaseLayout title={`${entry.data.title} | Geolonia`} description={entry.data.description}>
  <div class="page-container">
    <div class="hero-section">
      <div class="container">
        <h1>{entry.data.title}</h1>
        <p class="lead">Join Us</p>
      </div>
    </div>

    <div class="content-section">
      <div class="container markdown-content">
        <Content />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .page-container {
    padding-top: 0;
  }

  .hero-section {
    background: linear-gradient(135deg, #f39813 0%, #eb5722 100%);
    color: white;
    padding: 60px 0;
    margin-bottom: 60px;
  }

  .container {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .hero-section h1 {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    font-weight: 700;
  }

  .lead {
    font-size: 1.5rem;
    margin: 0;
    opacity: 0.9;
  }

  .content-section {
    padding: 0 0 80px 0;
  }

  .markdown-content :global(h2) {
    color: #f39813;
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .markdown-content :global(h3) {
    color: #333;
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .markdown-content :global(p) {
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .markdown-content :global(a) {
    color: #f39813;
    text-decoration: none;
  }

  .markdown-content :global(a:hover) {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .page-container {
      padding-top: 0;
    }

    .hero-section h1 {
      font-size: 2rem;
    }

    .lead {
      font-size: 1.2rem;
    }
  }
</style>
