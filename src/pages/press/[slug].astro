---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('press');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} | プレスリリース | 株式会社Geolonia`}>
  <div class="page-container">
    <div class="content-section">
      <div class="container">
        <article class="post">
          <header>
            <p class="breadcrumb">
              <a href="/press/">プレスリリース</a> / {post.data.title}
            </p>
            {post.data.category && (
              <span class="category">{post.data.category}</span>
            )}
            <h1>{post.data.title}</h1>
            <p class="meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('ja-JP', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            </p>
          </header>
          <div class="content markdown-content">
            <Content />
          </div>
          <footer>
            <a href="/press/" class="back-link">← プレスリリース一覧に戻る</a>
          </footer>
        </article>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .post {
    max-width: 800px;
    margin: 0 auto;
  }

  .breadcrumb {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .breadcrumb a {
    color: #667eea;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .category {
    display: inline-block;
    background: #f0f0f0;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 1rem;
  }

  header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .meta {
    color: #666;
    font-size: 0.95rem;
  }

  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
  }

  .back-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>
